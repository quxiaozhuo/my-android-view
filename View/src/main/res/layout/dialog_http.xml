<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.library.view.roundcorners.RCLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#b32C2C2C"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="30dp"
        app:rRadius="10dp">

        <ProgressBar
            android:id="@+id/pr_bar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:indeterminate="false"
            android:indeterminateDrawable="@drawable/http_progressbar"
            android:indeterminateDuration="600" />

        <TextView
            android:id="@+id/dialog_http_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:visibility="gone" />

    </com.library.view.roundcorners.RCLinearLayout>
</layout>